{
    "swagger": "2.0",
    "info": {
        "description": "This is a URL shortener service.",
        "title": "urShorty API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:4000",
    "paths": {
        "/short/": {
            "post": {
                "description": "generate a short path",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "pathMeta"
                ],
                "summary": "Add a new path",
                "parameters": [
                    {
                        "description": "only full_url param is required",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entity.PathMeta"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/entity.PathMeta"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {}
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {}
                    }
                }
            }
        },
        "/short/{hash}": {
            "get": {
                "description": "takes a path and returned an original destination",
                "tags": [
                    "pathMeta"
                ],
                "summary": "redirect to original destination",
                "parameters": [
                    {
                        "type": "string",
                        "description": "a shortened path",
                        "name": "hash",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Found",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {}
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {}
                    }
                }
            }
        },
        "/short/{hash}/visits": {
            "get": {
                "description": "takes a path and returned list of visits",
                "tags": [
                    "pathMeta"
                ],
                "summary": "list of path's visits",
                "parameters": [
                    {
                        "type": "string",
                        "description": "a shortened path",
                        "name": "hash",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/entity.PathMeta"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {}
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {}
                    }
                }
            }
        }
    },
    "definitions": {
        "entity.PathMeta": {
            "type": "object",
            "properties": {
                "city": {
                    "type": "string"
                },
                "country": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "full_url": {
                    "type": "string"
                },
                "latitude": {
                    "type": "number"
                },
                "longitude": {
                    "type": "number"
                },
                "proxy": {
                    "type": "boolean"
                },
                "short_path": {
                    "type": "string"
                },
                "visited_at": {
                    "type": "string"
                }
            }
        }
    }
}